		<checksum>http://raw.github.com/leonardoxiao/purespin-kodi-repo/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/leonardoxiao/purespin-kodi-repo/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>PureSpin Addon</summary>
		<description>PureSpin Addon Description</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
